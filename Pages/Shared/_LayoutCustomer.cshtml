@* Pages/Shared/_LayoutCustomer.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - L&T Education</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
   
</head>
<body>
    <header class="bg-white shadow-sm sticky-top">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <a href="/" class="text-decoration-none d-flex align-items-center">
                <img src="~/images/lt_logo.png" alt="L&T Education" height="40" asp-append-version="true" />
            </a>


            <div class="d-flex align-items-center gap-3">
                <nav class="d-flex align-items-center gap-3">
                    <a class="nav-link p-0" href="/">Trang chủ</a>
                    <a class="nav-link p-0" href="/User/Courses">Khoá học</a>
                    <a class="nav-link p-0" href="/User/Teachers">Giảng viên</a>
                    <a class="nav-link p-0" href="/User/Students">Học viên</a>
                    <a class="nav-link p-0" href="/User/About">Về chúng tôi</a>
                </nav>

                <a href="/User/Advice" class="btn btn-outline-danger">Tư vấn</a>
                <a href="/User/Students/Login" class="btn btn-danger">Đăng nhập</a>
            </div>
        </div>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="bg-danger text-white py-4 mt-auto">
        <div class="container text-center">
            <strong>L&T Education</strong><br />
            Trung tâm luyện thi IELTS chất lượng cao với hàng ngàn học viên đạt kết quả tốt.<br />
            <small>&copy; 2025 L&T Education. All rights reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>AOS.init({ duration: 800, once: true });</script>
    @RenderSection("Scripts", required: false)
</body>
</html>
