@page
@model api.Pages.User.Teachers.ExamsModel
@{
    ViewData["Title"] = "Quản lý bài thi";
    Layout = "~/Pages/Shared/_LayoutTeacher.cshtml";
}

<h2>Bài thi đã tạo</h2>
<a href="/User/Teachers/CreateExam" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Tạo bài thi mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Lớp</th>
            <th>Ngày thi</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model.Exams)
        {
            <tr>
                <td>@exam.Title</td>
                <td>
                    @(Model.ClassNames.ContainsKey(exam.IdClass) ? Model.ClassNames[exam.IdClass] : exam.IdClass.ToString())
                </td>
                <td>@exam.ExamDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/User/Teachers/ExamDetail?examId=@exam.ExamId" class="btn btn-primary btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>