@page
@model api.Pages.User.Student.LoginModel
@{
    Layout = "~/Pages/Shared/_LayoutCustomer.cshtml";
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <style>
        .login-section {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to bottom, #fff, #fecaca);
        }
        .login-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(220,38,38,0.08);
            padding: 40px 32px 32px 32px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }
        .login-card img {
            height: 60px;
            margin-bottom: 18px;
        }
        .login-card h2 {
            font-weight: 700;
            color: #dc2626;
            margin-bottom: 18px;
            font-size: 2rem;
        }
        .login-card .form-group {
            margin-bottom: 18px;
            text-align: left;
        }
        .login-card label {
            font-weight: 500;
            color: #1f2937;
        }
        .login-card input[type="text"],
        .login-card input[type="password"] {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #d1d5db;
            font-size: 1rem;
            margin-top: 4px;
        }
        .login-card .btn-login {
            width: 100%;
            background: linear-gradient(to right, #dc2626, #f43f5e);
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 12px 0;
            font-weight: 600;
            font-size: 1.1rem;
            margin-top: 10px;
            transition: background 0.2s;
        }
        .login-card .btn-login:hover {
            background: linear-gradient(to right, #b91c1c, #dc2626);
        }
        .login-card .login-links {
            margin-top: 18px;
            font-size: 0.95em;
        }
        .login-card .login-links a {
            color: #dc2626;
            text-decoration: underline;
            margin: 0 8px;
        }
        .login-card .login-links a:hover {
            color: #b91c1c;
        }
        .login-card .alert {
            margin-bottom: 16px;
        }
    </style>
}

<div class="login-section">
    <div class="login-card">
        <img src="~/images/lt_logo.png" alt="L&T Education" />
        <h2>Đăng nhập</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label for="username">Tài khoản</label>
                <input type="text" id="username" name="username" class="form-control" required autofocus value="@Model.Username" />
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-login">Đăng nhập</button>
           <button type="submit" name="teacherLogin" value="true" class="btn btn-login" style="margin-top:10px;background:linear-gradient(to right,#2563eb,#38bdf8);">Đăng nhập cho Giảng viên</button>
        </form>

        <div class="login-links">
            <a href="#">Quên mật khẩu?</a> |
            <a href="/User/Register">Đăng ký tài khoản mới</a>
        </div>
    </div>
</div>
