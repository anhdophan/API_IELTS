@page "{id:int}"
@model api.Pages.Admin.Teachers.DeleteModel
@{
    ViewData["Title"] = "Delete Teacher";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Delete Teacher</h2>
<div>
    <h4>Are you sure you want to delete this teacher?</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Teacher.TeacherId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Teacher.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Teacher.Email</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Teacher.TeacherId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
