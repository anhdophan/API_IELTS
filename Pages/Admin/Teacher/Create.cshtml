@page
@model api.Pages.Admin.Teachers.CreateModel
@{
    ViewData["Title"] = "Create Teacher";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Create Teacher</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Teacher.TeacherId"></label>
        <input asp-for="Teacher.TeacherId" class="form-control" />
        <span asp-validation-for="Teacher.TeacherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Name"></label>
        <input asp-for="Teacher.Name" class="form-control" />
        <span asp-validation-for="Teacher.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Email"></label>
        <input asp-for="Teacher.Email" class="form-control" />
        <span asp-validation-for="Teacher.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.PhoneNumber"></label>
        <input asp-for="Teacher.PhoneNumber" class="form-control" />
        <span asp-validation-for="Teacher.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Username"></label>
        <input asp-for="Teacher.Username" class="form-control" />
        <span asp-validation-for="Teacher.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Password"></label>
        <input asp-for="Teacher.Password" class="form-control" />
        <span asp-validation-for="Teacher.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Teacher.Avatar"></label>
        <input asp-for="Teacher.Avatar" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Upload Avatar</label>
        <input type="file" name="AvatarUpload" class="form-control" accept="image/*" id="AvatarUploadInput" />
        <img id="AvatarPreview" class="img-preview" style="display:none;max-width:80px;border-radius:50%;" alt="Avatar preview" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
<partial name="_ValidationScriptsPartial" />
