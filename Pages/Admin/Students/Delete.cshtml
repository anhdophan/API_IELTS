@page "{id:int}"
@model api.Pages.Admin.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>
<div class="mb-2">
    <strong>@Model.Student.Name</strong> (ID: @Model.Student.StudentId)
</div>

<form method="post">
    <input type="hidden" asp-for="Student.StudentId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
