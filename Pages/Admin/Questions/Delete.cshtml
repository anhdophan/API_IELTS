@page "{id:int}"
@model api.Pages.Admin.Questions.DeleteModel
@{
    ViewData["Title"] = "Delete Question";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Delete Question</h2>
<div>
    <h4>Bạn có chắc chắn muốn xóa câu hỏi này?</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Question.QuestionId</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Question.Content</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Question.QuestionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>