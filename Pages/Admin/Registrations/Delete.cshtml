@page "{id:int}"
@model api.Pages.Admin.Registrations.DeleteModel
@{
    ViewData["Title"] = "Delete Registration";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Delete Registration</h2>
<div class="alert alert-danger">Are you sure you want to delete this registration?</div>
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Registration.RegistrationId</dd>

    <dt class="col-sm-2">Student ID</dt>
    <dd class="col-sm-10">@Model.Registration.StudentId</dd>

    <dt class="col-sm-2">Course ID</dt>
    <dd class="col-sm-10">@Model.Registration.CourseId</dd>
</dl>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
