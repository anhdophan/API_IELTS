
@page "{id:int}"
@model api.Pages.Admin.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Course</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this course?</h4>
</div>

<div>
    <h5>@Model.Course.Name</h5>
    <p>@Model.Course.DescriptionShort</p>
    <p><strong>Start:</strong> @Model.Course.StartDay.ToShortDateString()</p>
    <p><strong>End:</strong> @Model.Course.EndDay.ToShortDateString()</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>