@page "{id:int}"
@model api.Pages.Admin.Courses.DetailsModel
@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@section Styles {
<style>
    .course-details-container {
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.08);
        padding: 32px 28px 24px 28px;
    }
    .course-details-container h2 {
        text-align: center;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 28px;
    }
    .course-details-card {
        border: none;
        background: transparent;
    }
    .course-details-card .card-body {
        padding: 0;
    }
    .course-details-card h4 {
        font-weight: 600;
        color: #007bff;
        margin-bottom: 18px;
    }
    .course-details-card p {
        font-size: 1.08rem;
        margin-bottom: 10px;
        color: #34495e;
    }
    .course-details-card strong {
        color: #555;
    }
    .course-images-row {
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .course-images-row .img-thumbnail {
        width: 100%;
        max-width: 140px;
        height: auto;
        margin-bottom: 10px;
        border-radius: 8px;
        box-shadow: 0 1px 6px rgba(0,0,0,0.07);
    }
    .btn-primary {
        min-width: 120px;
        font-weight: 500;
        font-size: 1rem;
    }
</style>
}
<div class="course-details-container">
    <h2>Course Details</h2>
    <div class="card course-details-card">
        <div class="card-body">
            <h4>@Model.Course.Name</h4>
            <p><strong>Cost:</strong> @Model.Course.Cost.ToString("C")</p>
            <p><strong>Start:</strong> @Model.Course.StartDay.ToShortDateString()</p>
            <p><strong>End:</strong> @Model.Course.EndDay.ToShortDateString()</p>
            <p><strong>Description:</strong></p>
            <p>@Model.Course.DescriptionLong</p>

            @if (Model.Course.Images != null && Model.Course.Images.Any())
            {
                <p><strong>Images:</strong></p>
                <div class="row course-images-row">
                    @foreach (var img in Model.Course.Images)
                    {
                        <div class="col-md-3 col-6">
                            <img src="@img" alt="Image" class="img-thumbnail" />
                        </div>
                    }
                </div>
            }

            <a asp-page="Index" class="btn btn-primary mt-3">Back to List</a>
        </div>
    </div>
</div>